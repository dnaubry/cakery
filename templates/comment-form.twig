<div class="comment-form-container">

  <form id="respond" class="comment-form" method="post" action="{{ site.url~'/wp-comments-post.php' }}">
    <h3> Add Comment </h3>
    {% if user %}
    <input type="hidden" name="email" value="{{ user.email }}">
    <input type="hidden" name="author" value="{{ user.name }}"> {% else %}
    <div>
      <div class="email">
        <label for="email"> email </label>
        <input required name="email" type="text" id="email" />
      </div>
      <div class="author">
        <label for="author"> username </label>
        <input required name="author" type="text" id="author" />
      </div>
    </div>
    {% endif %}

    <div>
      <label for="comment"> comment </label>
      <textarea name="comment" cols="60" rows="3" id="comment"></textarea>
    </div>

    <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
    <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

    <div class="btn-container">
      <button type="submit" name="Submit" class="btn"> submit comment </button>
    </div>
  </form>
</div>